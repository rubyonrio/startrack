<%= simple_form_for(@project, :wrapper => :inline) do |f| %>
    <%= f.error_notification %>

  <fieldset class="inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.association :users, :as => :check_boxes %>
  </fieldset>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
